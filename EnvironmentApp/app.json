{
  "expo": {
    "name": "EnvironmentApp",
    "slug": "EnvironmentApp",
    "scheme": "envapp269",
    "owner": "net269gaming",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",

    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.EnvironmentApp",
      "infoPlist": {
        "NSCameraUsageDescription": "Ứng dụng cần truy cập Camera để chụp ảnh phân loại rác và báo cáo vi phạm.",
        "NSMicrophoneUsageDescription": "Ứng dụng cần truy cập Micro để quay video bằng chứng báo cáo.",
        "NSPhotoLibraryUsageDescription": "Ứng dụng cần truy cập thư viện để chọn ảnh báo cáo.",
        "NSLocationWhenInUseUsageDescription": "Ứng dụng cần vị trí để hiển thị các điểm thu gom rác gần bạn."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "package": "com.anonymous.EnvironmentApp",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },

    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },

    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-video",
      [
        "expo-image-picker",
        {
          "photosPermission": "Cho phép ứng dụng truy cập ảnh của bạn để tải lên báo cáo."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Cho phép ứng dụng sử dụng vị trí để tìm điểm tái chế."
        }
      ]
    ],
    
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "8cfe4ef8-a57a-4821-81e6-514909c3f3c3"
      }
    }
  }
}
